set nocompatible
syntax on
filetype plugin indent on

set background=dark

inoremap fd <Esc>

set autoindent
set smartindent
set softtabstop=4
set shiftwidth=4
set expandtab

set cursorline
set nowrap

set ignorecase
set smartcase

set list

set number

color badwolf

" let ctrl-space autocomplete in insert mode
imap <Nul> <C-n>
map  <Nul> <Nop>
vmap <Nul> <Nop>
cmap <Nul> <Nop>
nmap <Nul> <Nop>

